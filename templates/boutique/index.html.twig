{% extends 'base.html.twig' %}

{% block title %}{% trans %}Boutique{% endtrans %}{% endblock %}

{% block content %}
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <span class="subheading">{% trans %}Des produits pour tous les goûts{% endtrans %}</span>
                <h2 class="mb-4">{% trans %}Catégories alimentaires{% endtrans %}</h2>
                <p>{% trans %}Sélectionnez la catégorie de votre choix{% endtrans %}</p>
            </div>
        </div>
    </div>

    <section class="ftco-section ftco-category ftco-no-pt">
        <div class="container">
            <div class="row">
                {% for category in categories %}
                    <div class="col-md-4">
                        <div class="category-wrap ftco-animate img mb-4 d-flex align-items-end" style="background-image: url({{ asset('assets/images/' ~ category.visuel) }});">
                            <div class="text px-3 py-1">
                                <h2 class="mb-0"><a href="{{ path('rayon', {'idCategory': category.id}) }}">{{ category.libelle }}</a></h2>
                                <h6 class="price">{{ category.texte }}</h6>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

</section>
{% endblock %}